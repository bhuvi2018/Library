extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text' placeholder='Name (IT)' name='name' required='true' value=(undefined===student ? '' : student.name) )
      label(for='roll_no') Roll-No:
      input#roll_no.form-control(type='text' placeholder='roll_no (ID)' name='roll_no' required='true' value=(undefined===student ? '' : student.roll_no))
      label(for='email_id') Email-ID:
      input#name.form-control(type='text' placeholder='xxxx@gmail.com' name='email_id' required='true' value=(undefined===student ? '' : student.email_id) )
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg